rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // API Keys collection
    match /api_keys/{keyId} {
      allow read, write: if false; // Only accessible via Firebase Functions
    }
    
    // Scans collection
    match /scans/{scanId} {
      allow read: if request.auth != null || 
                   (request.auth == null && resource.data.userId == null);
      allow write: if false; // Only accessible via Firebase Functions
    }
    
    // Users collection (if you add user management)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 